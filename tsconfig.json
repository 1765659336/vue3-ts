{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    // --------------与vite中的路径别名不要冲突
    "baseUrl": "./",
    "paths": {
      "@": ["./src/"]
    },
    "types": ["unplugin-vue-define-options/macros-global"],
    // --------------
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue","src/mock/**/*.ts", "src/assets/js/homeAnimation.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
